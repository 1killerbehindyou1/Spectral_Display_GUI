{
    "version": 8,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default configure",
            "description": "Sets Ninja generator, build and install directory",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "Qt5_DIR": "/usr/lib/x86_64-linux-gnu/cmake/Qt5",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/install/${presetName}",
                "BUILD_UT": "OFF",
                "BUILD_BENCHMARK_TESTS": "OFF"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug configure",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "displayName": "Release configure",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "ut",
            "displayName": "Unit Test configure",
            "inherits": "debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_UT": "ON"
            }
        },
        {
            "name": "benchmark",
            "displayName": "Benchmark configure",
            "inherits": "debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_BENCHMARK_TESTS": "ON",
                "BUILD_UT": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "base",
            "hidden": true,
            "jobs": 8
        },
        {
            "name": "debug",
            "inherits": "base",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "inherits": "base",
            "configurePreset": "release"
        },
        {
            "name": "benchmark",
            "inherits": "base",
            "configurePreset": "benchmark"
        },
        {
            "name": "ut",
            "inherits": "base",
            "configurePreset": "ut"
        }
    ]
}